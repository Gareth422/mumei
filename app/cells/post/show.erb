<article class="post" data-id="<%= @post.id %>">
  <header class="info">
    <% if @post.email %>
      <%= mail_to @post.email do %>
        <span class="author"><%= @post.author || "anonymous" %></span>
      <% end %>
    <% else %>
      <span class="author"><%= @post.author %></span>
    <% end %>
    <%= time_tag @post.created_at %>
    <span class="id">#<%= @post.id %></span>
    <div class="actions">
      <%= link_to 'Reply', topic_path(@post.topic, anchor:'new_post'), class:'reply' %>
    </div>
  </header>
  <% @post.images.each do |image| %>
    <%= link_to image_url(image.image.url), class:'img' do %>
      <%= image_tag image_url(image.image.thumb.url) %>
    <% end %>
  <% end %>
  <div class="content">
    <%= @post.content_html %>
  </div>
</article>
